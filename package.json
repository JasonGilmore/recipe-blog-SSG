{
  "name": "recipe-blog",
  "version": "1.0.0",
  "description": "A static site generator for publishing recipes and other content. Write in Markdown, publish in HTML.",
  "main": "src/generate.js",
  "scripts": {
    "build": "node src/generate.js",
    "serve": "npx pm2 start server.js --name recipe-blog --exp-backoff-restart-delay=100 --time",
    "start": "npm run build && npm run serve",
    "stop": "npx pm2 stop recipe-blog",
    "delete": "npx pm2 delete recipe-blog",
    "restart": "npx pm2 restart recipe-blog",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "csso": "~5.0.5",
    "exif-be-gone": "~1.5.1",
    "express": "~5.1.0",
    "front-matter": "~4.0.2",
    "helmet": "~8.1.0",
    "html-minifier-terser": "~7.2.0",
    "lunr": "~2.3.9",
    "marked": "~16.4.0",
    "pm2": "~6.0.13",
    "terser": "~5.46.0"
  }
}
